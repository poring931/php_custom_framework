{% extends 'default.template.twig' %}

{% block main %}
    <div class="bg-body-tertiary p-5 rounded">

        <form>

            <div class="form-floating mb-3">
                <input type="title" class="form-control" id="floatingInput" placeholder="name@example.com">
                <label for="floatingInput">Заголовок</label>
            </div>

            <div class="form-floating mb-3">
            <textarea name="body" cols="30" rows="10" class="form-control" placeholder="Leave a comment here"
                      id="floatingTextarea"></textarea>
                <label for="floatingTextarea">Контент</label>
            </div>

            <button class="btn btn-primary w-50 py-2 h-50" type="submit">Add</button>
        </form>
    </div>
        
{% endblock %}